<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Botón para seleccionar Bitcoin -->
    <Button
        android:id="@+id/buttonBitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Bitcoin" />

    <!-- Botón para seleccionar Ethereum -->
    <Button
        android:id="@+id/buttonEthereum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Ethereum" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona una criptomoneda"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>

</LinearLayout>