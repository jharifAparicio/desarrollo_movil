<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <com.example.myapplication.Transform
        android:id="@+id/graficoView"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:layout_margin="8dp" />

    <!-- Botón rotar -->
    <Button
        android:id="@+id/rotateButtonLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotar Izquierda" />
    <Button
        android:id="@+id/rotateButtonRigth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotar Derecha" />

    <!-- Botón zoom -->
    <Button
        android:id="@+id/zoomButtonIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zoom +" />

    <Button
        android:id="@+id/zoomButtonOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zoom -" />

    <!-- Botón trasladar -->
    <Button
        android:id="@+id/translateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trasladar" />

</LinearLayout>